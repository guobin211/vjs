{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "ignore": ["quickjs", "node_modules", "dist", "build", "target", "libs"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "recommended": false
            },
            "a11y": {
                "recommended": false
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "indentWidth": 4
        }
    }
}
